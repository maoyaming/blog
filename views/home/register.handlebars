
    <div class="viewport">
        <!-- 头部 -->
      {{>header}}
        <!-- 主体 -->
        <div class="body">
            <div class="login">
                <div class="wrapper">
                    <div class="contact">
                        <p>有什么问题可以点击下方联系</p>
                        <img src="/home/images/email.png" alt="">
                    </div>
                    <form id="registerForm">
                        <ul>
                            <li>
                                <label for="">用户名:</label>
                                <input type="text" name="name">
                            </li>
                            <li>
                                <label for="">邮　箱:</label>
                                <input type="text" name="email">
                            </li>
                            <li>
                                <label for="">密　码:</label>
                                <input type="password" name="pass">
                            </li>
                            <li>
                                <label for=""></label>
                                <input type="submit" value="注 册" id="registerBtn">
                            </li>
                        </ul>
                    </form>
                </div>
            </div>
        </div>
        <!-- 底部 -->
        {{>footer}}
    </div>
    <script>
        // 当表单发生提交行为时
        $('#registerForm').on('submit',function(){
           
                var formData = $(this).serializeToJson();
                $.ajax({
                    type:'post',
                    url:'/home/register',
                    data:formData,
                    success:function(msg){
                      if(msg.success){
                          location.href='/home/login'
                      }else{
                          alert(msg.message)
                      }
                    }
                })


            return false;// 阻止表单默认提交行为
        })


    </script>
